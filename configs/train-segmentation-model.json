{
    "job_dir": "./results/segmentation",
    "ds_path": "./datasets",
    "sampling_rate": 200,
    "frame_size": 512,
    "samples_per_patient": 100,
    "val_samples_per_patient": 100,
    "val_patients": 0.10,
    "batch_size": 64,
    "buffer_size": 16384,
    "epochs": 150,
    "steps_per_epoch": 500,
    "val_metric": "loss",
    "datasets": ["ludb", "qtdb", "synthetic"],
    "lr_rate": 5e-3,
    "num_pts": 800,
    "augmentations": [
        {
            "name": "baseline_wander",
            "args": {
                "amplitude": [0.5, 1.5],
                "frequency": [0.4, 0.5]
            }
        },
        {
            "name": "motion_noise",
            "args": {
                "amplitude": [0.2, 1.0],
                "frequency": [0.4, 0.6]
            }
        },
        {
            "name": "burst_noise",
            "args": {
                "burst_number": [0, 5],
                "amplitude": [0.05, 0.75],
                "frequency": [80, 100]
            }
        },
        {
            "name": "powerline_noise",
            "args": {
                "amplitude": [0.005, 0.01],
                "frequency": [50, 60]
            }
        },
        {
            "name": "noise_sources",
            "args": {
                "num_sources": [1, 4],
                "amplitude": [0.04, 0.2],
                "frequency": [10, 40]
            }
        }
    ]
}
