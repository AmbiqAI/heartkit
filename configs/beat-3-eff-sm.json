{
    "name": "beat-3-eff-lg",
    "project": "hk-beat-3",
    "job_dir": "./results/beat-3-eff-lg",
    "verbose": 2,

    "datasets": [{
        "name": "icentia11k",
        "params": {
            "path": "./datasets/icentia11k"
        }
    }],

    "num_classes": 3,
    "class_map": {
        "0": 0,
        "1": 1,
        "2": 2
    },
    "class_names": [
        "QRS", "PAC", "PVC"
    ],

    "sampling_rate": 100,
    "frame_size": 512,

    "samples_per_patient": [10, 40, 40],
    "val_samples_per_patient": [10, 40, 40],
    "test_samples_per_patient": [10, 40, 40],

    "val_size": 30000,
    "test_size": 30000,

    "val_patients": 0.20,
    "batch_size": 256,
    "buffer_size": 50000,
    "epochs": 150,
    "steps_per_epoch": 50,
    "val_metric": "loss",
    "lr_rate": 1e-3,
    "lr_cycles": 1,
    "class_weights": "balanced",

    "threshold": 0.5,

    "test_metric": "f1",
    "test_metric_threshold": 0.02,
    "tflm_var_name": "g_beat_model",
    "tflm_file": "beat_model_buffer.h",

    "backend": "pc",
    "demo_size": 900,
    "display_report": true,

    "quantization": {
        "qat": false,
        "mode": "FP32",
        "io_type": "float32",
        "concrete": true,
        "debug": false
    },

    "preprocesses": [
        {
            "name": "layer_norm",
            "params": {
                "epsilon": 0.01,
                "name": "znorm"
            }
        }
    ],

    "model_file": "model.keras",
    "use_logits": false,
    "architecture": {
        "name": "efficientnetv2",
        "params": {
            "input_filters": 24,
            "input_kernel_size": [1, 9],
            "input_strides": [1, 2],
            "blocks": [
                {"filters": 32, "depth": 2, "kernel_size": [1, 9], "strides": [1, 2], "ex_ratio": 1, "se_ratio": 4, "norm": "layer"},
                {"filters": 48, "depth": 2, "kernel_size": [1, 9], "strides": [1, 2], "ex_ratio": 1, "se_ratio": 4, "norm": "layer"},
                {"filters": 56, "depth": 1, "kernel_size": [1, 9], "strides": [1, 2], "ex_ratio": 1, "se_ratio": 4, "norm": "layer"},
                {"filters": 64, "depth": 1, "kernel_size": [1, 9], "strides": [1, 2], "ex_ratio": 1, "se_ratio": 4, "norm": "layer"},
                {"filters": 72, "depth": 1, "kernel_size": [1, 9], "strides": [1, 2], "ex_ratio": 1, "se_ratio": 4, "norm": "layer"},
                {"filters": 96, "depth": 1, "kernel_size": [1, 9], "strides": [1, 2], "ex_ratio": 1, "se_ratio": 4, "norm": "layer"}
            ],
            "norm": "layer",
            "output_filters": 0,
            "include_top": true,
            "use_logits": true
        }
    }
}
